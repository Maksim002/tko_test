<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="@string/txt_cancel_unloading"
        android:textColor="@color/color_text"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancelNoBtn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginEnd="3dp"
            android:textSize="12sp"
            android:text="@string/text_no"
            android:background="@drawable/red_button_styles"
            android:layout_marginStart="6dp"
            android:textColor="@color/gmm_white"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/cancelYesBtn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginEnd="3dp"
            android:background="@drawable/green_button_style"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:text="@string/text_yes"
            android:layout_marginStart="6dp"
            android:textColor="@color/gmm_white"/>
    </LinearLayout>
</LinearLayout>