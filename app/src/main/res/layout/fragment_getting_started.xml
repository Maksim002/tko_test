<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    style="@style/LayoutStile">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/color_text_w"
        android:text="@string/you_have_started_text"/>

    <TextView
        android:id="@+id/addressText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:textStyle="bold"
        android:textColor="@color/color_text"
        android:text="@string/semi_street_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginEnd="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="31dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnToRoute"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="1dp"
            android:visibility="visible"
            android:textSize="12sp"
            android:background="@drawable/red_button_styles"
            android:gravity="center"
            android:textColor="@color/gmm_white"
            android:padding="16dp"
            android:text="НЕВОЗМОЖНО"
            tools:ignore="HardcodedText,SmallSp" />

        <TextView
            android:id="@+id/btnToBeginning"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="1dp"
            android:visibility="visible"
            android:textSize="12sp"
            android:background="@drawable/green_button_style"
            android:textColor="@color/gmm_white"
            android:gravity="center"
            android:padding="16dp"
            android:text="НАЧАЛО РАБОТ"
            tools:ignore="HardcodedText,SmallSp" />
    </LinearLayout>
</LinearLayout>