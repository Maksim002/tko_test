<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    tools:ignore="DisableBaselineAlignment">


    <View
        android:id="@+id/markInfo"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true" />


    <TextView
        android:visibility="gone"
        android:layout_marginStart="8dp"
        android:layout_centerInParent="true"
        android:id="@+id/weightText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/markInfo"
        android:text=""
        android:textColor="@color/green_text"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginStart="8dp"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@id/markInfo"
        android:id="@+id/statusDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:visibility="gone"
        android:maxLength="22"
        android:textSize="10sp"
        android:text=""
        tools:ignore="SmallSp" />

    <RelativeLayout
        android:background="@drawable/background_photo_container"
        android:visibility="gone"
        android:paddingVertical="1dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/photoContainer"
        android:layout_width="40dp"
        android:layout_height="40dp">

        <com.google.android.material.imageview.ShapeableImageView
            style="@style/ShapeImagePhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/photoContainerItem"
            android:scaleType="centerCrop"
            android:src="@drawable/img"
            app:shapeAppearanceOverlay="@style/ShapeImage" />


        <TextView
            android:id="@+id/amountOfPhotos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="+3"
            android:textAlignment="center"
            android:textColor="@color/gmm_white"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded,SmallSp" />

    </RelativeLayout>


</RelativeLayout>