<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/installedVersionTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="69dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Установлена последняя версия 3.0.137"
        android:textColor="@color/yellow_color"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="55dp"
        android:src="@drawable/ic_latest_version" />

    <TextView
        android:id="@+id/buttonEntrance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/blue_button_styles"
        android:textColor="@color/gmm_white"
        android:gravity="center"
        android:padding="20dp"
        android:text="ВОЙТИ"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="АИС Отходы"
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/versionTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="3.0.137"
            android:textColor="@color/gray"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout></androidx.core.widget.NestedScrollView>