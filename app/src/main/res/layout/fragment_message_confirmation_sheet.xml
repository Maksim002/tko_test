<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="20sp"
        android:textColor="@color/color_text"
        android:text="@string/continue_without_movers"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/returnBtn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginEnd="5dp"
            android:background="@drawable/red_button_styles"
            android:text="@string/text_no"
            android:textSize="13sp"
            app:cornerRadius="0dp"
            android:layout_marginStart="16dp"
            android:textColor="@color/gmm_white"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/sureBtn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:text="@string/text_yes"
            android:gravity="center"
            android:textSize="13sp"
            android:background="@drawable/green_button_style"
            android:textColor="@color/gmm_white"
            tools:ignore="SmallSp" />
    </LinearLayout>
</LinearLayout>