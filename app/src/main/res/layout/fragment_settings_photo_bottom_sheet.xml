<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/idReturnBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="16dp"
                android:src="@drawable/ic_refund" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Настройте камеру"
                    android:textColor="@color/color_text"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Выберите пункты отображения "
                    android:textColor="@color/gray"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Координаты"
                android:textColor="@color/color_text"
                android:textSize="16sp" />

            <com.suke.widget.SwitchButton
                android:id="@+id/geoDataCheck"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:sb_button_color="@color/color_text"
                app:sb_checked="true"
                app:sb_checked_color="@color/color_pale_blue"
                app:sb_show_indicator="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Дата и время"
                android:textColor="@color/color_text"
                android:textSize="16sp" />

            <com.suke.widget.SwitchButton
                android:id="@+id/timeCheck"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:sb_button_color="@color/color_text"
                app:sb_checked="true"
                app:sb_checked_color="@color/color_pale_blue"
                app:sb_show_indicator="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Тип фотографии"
                android:textColor="@color/color_text"
                android:textSize="16sp" />

            <com.suke.widget.SwitchButton
                android:id="@+id/locationCheck"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:sb_button_color="@color/color_text"
                app:sb_checked="false"
                app:sb_checked_color="@color/color_pale_blue"
                app:sb_show_indicator="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Тип фотографии"
                android:textColor="@color/color_text"
                android:textSize="16sp" />

            <com.suke.widget.SwitchButton
                android:id="@+id/photoTypeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:sb_button_color="@color/color_text"
                app:sb_checked="true"
                app:sb_checked_color="@color/color_pale_blue"
                app:sb_show_indicator="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="АИС Отходы"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/settingPhotoVersionTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="3.0.137"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>